{%- style -%}

    {{  heading_font | font_face: font_display: 'swap' }}
    {{  button_font | font_face: font_display: 'swap' }}
    {{  text_font | font_face: font_display: 'swap' }}
  
    .section-{{ section.id }} {
        border-top: solid {{ border_color }} {{ border_thickness }}px;
        border-bottom: solid {{ border_color }} {{ border_thickness }}px;
        margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
        margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
        margin-left: {{ margin_horizontal_mobile }}rem;
        margin-right: {{ margin_horizontal_mobile }}rem;
        border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
        overflow: hidden;
    }
    
    .section-{{ section.id }}-settings {
      position:relative;
        margin: 0 auto;
        padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
        padding-left: {{ padding_horizontal_mobile }}rem;
        padding-right: {{ padding_horizontal_mobile }}rem;
    }

    .slider-top-{{ section.id }} {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .slider-heading-{{ section.id }} {
        width: 100%;
    }

    .slider-heading-{{ section.id }} * {
        margin: 0;
        font-size: {{ heading_size_mobile }}px;
        color: {{ heading_color }};
        line-height: {{ heading_height }}%;
        text-transform: unset;
    }

    .slider-button-{{ section.id }} {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        max-width: fit-content;
        margin: 0;
        font-size: {{ button_size_mobile }}px;
        color: {{ button_color }};
        line-height: {{ button_height }}%;
        text-align: center;
        text-transform: unset;
        text-decoration: none;
        padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
        border-radius: {{ button_radius }}px;
        transition: all 0.25s ease 0s;
        position: relative;
        font-weight: 700;
        z-index: 2;
        box-sizing: border-box;
    }

    .slider-button-{{ section.id }} svg {
        width: 14px;
        height: 14px;
    }

    .slider-button-{{ section.id }} svg path {
        fill: {{ button_color }};
        transition: all 0.25s ease 0s;
    }

    .slider-button-{{ section.id }}:hover {
        color: {{ button_hover_color }};
        transition: all 0.25s ease 0s;
    }

    .slider-button-{{ section.id }}:hover svg path {
        fill: {{ button_hover_color }};
        transition: all 0.25s ease 0s;
    }

    .slider-slider-{{ section.id }} {
        margin-top: {{ slider_mt_mobile }}px;
        overflow: visible !important;
    }

    .slider-slide-{{ section.id }} {
      text-decoration: none;
    }

    .slider-image-{{ section.id }} {  
        overflow: hidden;
        border-radius: {{ image_radius }}px;
        border: {{ image_border_thickness }}px solid {{ image_border_color }};
    }

    .slider-image-{{ section.id }} img,
    .slider-image-{{ section.id }} svg {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover
    }

    .slider-image-{{ section.id }} svg {
        background-color: #AFAFAF;
    }

    .slider-second-image-{{ section.id }} {
        display: none;
    }

    .slider-slide-{{ section.id }}:hover .slider-second-image-{{ section.id }} {
        display: block;
    }

    .slider-slide-{{ section.id }}:hover .slider-first-image-{{ section.id }} {
        display: none;
    }

    .slider-text-{{ section.id }} {
        padding: 0px {{ text_padding_horizontal_mobile }}px;
        margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
        text-align: {{ text_align_mobile }};
    }

    .slider-text-{{ section.id }} * {
        margin: 0;
        font-size: {{ text_size_mobile }}px;
        color: {{ text_color }};
        line-height: {{ text_height }}%;
        text-transform: unset;
        transition: all 0.25s ease 0s;
    }

    .slider-slide-{{ section.id }}:hover .slider-text-{{ section.id }} *{
        opacity: 0.6;
    }

    .slider-navigation-{{ section.id }} {
      top: 50%;
      left:0;
      z-index: 20;
      width:100%;
      position: absolute;
        margin-top: {{ navigation_mt_mobile }}px;
        padding-top: {{ navigation_pt_mobile }}px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
        /*border-top: {{ navigation_border_thickness }}px solid {{ navigation_border_color }};*/
    }

    .slider-btn-prev-{{ section.id }},
    .slider-btn-next-{{ section.id }} {
        position: static !important;
        flex: 0 0 {{ arrow_size_mobile }}px;
        height: {{ arrow_size_mobile }}px;
        flex-shrink: 0;
        border: 0px;
        box-shadow: none;
        background: transparent;
        cursor: pointer;
    }

    .slider-btn-prev-{{ section.id }} svg,
    .slider-btn-next-{{ section.id }} svg {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .slider-btn-prev-{{ section.id }} svg path,
    .slider-btn-next-{{ section.id }} svg path {
        fill: {{ arrow_color }};
        transition: all 0.25s ease 0s;
    }

    .slider-btn-prev-{{ section.id }}:hover svg path,
    .slider-btn-next-{{ section.id }}:hover svg path {
        fill: {{ arrow_hover_color }};
        transition: all 0.25s ease 0s;
    }

    .slider-btn-prev-{{ section.id }}.swiper-button-disabled,
    .slider-btn-next-{{ section.id }}.swiper-button-disabled {
        opacity: 0.3;
    }
    
    @media(min-width: 1024px) {

        .section-{{ section.id }} {
            margin-top: {{ margin_top }}px;
            margin-bottom: {{ margin_bottom }}px;
            margin-left: {{ margin_horizontal }}rem;
            margin-right: {{ margin_horizontal }}rem;
            border-radius: {{ section_radius }}px;
        }
        
        .section-{{ section.id }}-settings {
            padding: 0 5rem;
            padding-top: {{ padding_top }}px;
            padding-bottom: {{ padding_bottom }}px;
            padding-left: {{ padding_horizontal }}rem;
            padding-right: {{ padding_horizontal }}rem;
        }
        
        .slider-heading-{{ section.id }} * {
            font-size: {{ heading_size }}px;
        }

        .slider-button-{{ section.id }} {
            padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
            font-size: {{ button_size }}px;
        }

        .slider-slider-{{ section.id }} {
            margin-top: {{ slider_mt }}px;
        }

        .slider-text-{{ section.id }} {
            padding: 0px {{ text_padding_horizontal }}px;
            margin-top: {{ text_mt }}px;
            text-align: {{ text_align }};
        }

        .slider-text-{{ section.id }} * {
            font-size: {{ text_size }}px;
        }

        .slider-navigation-{{ section.id }} {
            margin-top: {{ navigation_mt }}px;
            padding-top: {{ navigation_pt }}px;
        }

        .slider-btn-prev-{{ section.id }},
        .slider-btn-next-{{ section.id }} {
            flex: 0 0 {{ arrow_size }}px;
            height: {{ arrow_size }}px;
        }
    }
  
{%- endstyle -%}

