<script>
  function initImageWithText18() {
    const slider = new Swiper(".image-with-text-slider-{{ section.id }}", {
      speed: 300,
      slidesPerView: 1,
      navigation: {
        nextEl: '.image-with-text-btn-next-{{ section.id }}',
        prevEl: '.image-with-text-btn-prev-{{ section.id }}',
      },
      breakpoints: {
        320: {
          spaceBetween: {{ slider_gap_mobile }}      
        },
        768: {
          spaceBetween: {{ slider_gap_mobile }}   
        },
        1024: {
          spaceBetween: {{ slider_gap }}
        }
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initImageWithText18);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initImageWithText18);
     document.addEventListener('shopify:section:load', initImageWithText18);
  }
</script>

