{%- style -%}
  {{ sub_heading_font | font_face: font_display: 'swap' }}
  {{  heading_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    position: relative;
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {    
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .image-with-text-slider-{{ section.id }}.swiper {
    overflow: visible;
  }

  .image-with-text-slide-{{ section.id }} {
    display: grid !important;
    grid-template-columns: 1fr !important;
    grid-template-areas: 
      "assets" 
      "content" !important; 
    overflow: hidden !important;
    border-radius: {{ slide_radius }}px !important;
    align-items: center !important;
    background-image: {{ slide_content_bg_gradient }};
    background-color: {{ slide_content_bg_color }};
  }

  .image-with-text-content-{{ section.id }} {
    padding: {{ slide_padding_vertical_mobile }}px {{ slide_padding_horizontal_mobile }}px;
    text-align: {{ slide_content_align_mobile }};
    grid-area: content;
  }
  
  .image-with-text-image-{{ section.id }} {    
    aspect-ratio:1 /1;
    grid-area: assets;
  }
  
  .image-with-text-image-{{ section.id }} img,
  .image-with-text-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin: 0;      
  }

  .image-with-text-image-{{ section.id }} svg {
    background-color: #ababab;
  }

  .image-with-text-subheading-{{ section.id }} {
    display: block;
    word-wrap: break-word;
  }

  .image-with-text-subheading-{{ section.id }} * {
    margin: 0;
    font-size: {{ sub_heading_size_mobile }}px;
    color: {{ sub_heading_color }};
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
  }

  .image-with-text-heading-{{ section.id }} {
    display: block;
    word-wrap: break-word;
    margin-top: {{ heading_mt_mobile }}px;

  }

  .image-with-text-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .image-with-text-text-{{ section.id }} {
    display: block;
    word-wrap: break-word;
    margin-top: {{ text_mt_mobile }}px;
  }

  .image-with-text-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  
  .image-with-text-btn-prev-{{ section.id }},
  .image-with-text-btn-next-{{ section.id }} {
    display: flex;
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: 0px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: {{ arrow_radius }}px;
    background: transparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    position: absolute;
    top: 50%;
    transform: translateY(-50%); 
    z-index: 2;
  }

  .image-with-text-btn-prev-{{ section.id }} {
    left: 32px;
  }
  .image-with-text-btn-next-{{ section.id }} {
    right: 32px;
  }

  .image-with-text-btn-prev-{{ section.id }} .icon,
  .image-with-text-btn-next-{{ section.id }} .icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .image-with-text-btn-prev-{{ section.id }} .icon:before,
  .image-with-text-btn-next-{{ section.id }} .icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile }}px;
    height: {{ arrow_icon_size_mobile }}px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .image-with-text-btn-prev-{{ section.id }} .icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .image-with-text-btn-prev-{{ section.id }} .icon:after,
  .image-with-text-btn-next-{{ section.id }} .icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile | minus: 0.3 }}px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .image-with-text-btn-prev-{{ section.id }} span,
  .image-with-text-btn-next-{{ section.id }} span {
    color: {{ arrow_color }};
  }

  .image-with-text-btn-prev-{{ section.id }}.swiper-button-disabled,
  .image-with-text-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0;
  }

  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .image-with-text-slide-{{ section.id }} {
      grid-template-columns: 1fr 1fr !important;
      grid-template-areas: "content assets" !important;
    }
    
    .image-with-text-content-{{ section.id }} {
      padding: {{ slide_padding_vertical }}px {{ slide_padding_horizontal }}px;
      text-align: {{ slide_content_align }};
    }

    .image-with-text-subheading-{{ section.id }} * {
      font-size: {{ sub_heading_size }}px;
    }

    .image-with-text-heading-{{ section.id }} {
      margin-top: {{ heading_mt }}px;
    }

    .image-with-text-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .image-with-text-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
    }

    .image-with-text-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }
    
    .image-with-text-btn-prev-{{ section.id }},
    .image-with-text-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
      transition: all 0.25s ease 0s;
    }

    .image-with-text-btn-prev-{{ section.id }} .icon:before,
    .image-with-text-btn-next-{{ section.id }} .icon:before {
      width: {{ arrow_icon_size }}px;
      height: {{ arrow_icon_size }}px;
    }

    .image-with-text-btn-prev-{{ section.id }} .icon:after,
    .image-with-text-btn-next-{{ section.id }} .icon:after {
      width: {{ arrow_icon_size | minus: 0.3 }}px;
    }

    .image-with-text-btn-prev-{{ section.id }}:hover,
    .image-with-text-btn-next-{{ section.id }}:hover {
      transition: all 0.3s ease 0s;
      border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
      background: {{ arrow_bg_hover_color }};
    }
  
    .image-with-text-btn-prev-{{ section.id }}:hover .icon,
    .image-with-text-btn-next-{{ section.id }}:hover .icon {
      color: {{ arrow_hover_color }};
    }
  }
  
