<script>

  function initPricingTable4() {
    const toggles = document.querySelectorAll('.pricing-toggle-{{ section.id }}');
    const cards = document.querySelectorAll('.pricing-card-{{ section.id }}');

    if(toggles) {
      toggles.forEach(toggle => {        
        toggle.addEventListener('click', () => {
          toggles.forEach(e => {
            e.classList.remove('active');
          })
          cards.forEach(card => {
            toggle.classList.add('active');
            if(toggle.id == card.getAttribute('data-id')) {
              card.classList.add('active');
            } else {
              card.classList.remove('active');
            }
          })
        })
      })
    }
  }

  document.addEventListener('DOMContentLoaded', initPricingTable4);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initPricingTable4);
     document.addEventListener('shopify:section:load', initPricingTable4);
  }
</script>



