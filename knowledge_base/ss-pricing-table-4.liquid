{%- style -%}

  {{ card_title_font | font_face: font_display: 'swap' }}
  {{ badge_font | font_face: font_display: 'swap' }}
  {{ card_text_font | font_face: font_display: 'swap' }}
  {{ feature_title_font | font_face: font_display: 'swap' }}
  {{ button_font | font_face: font_display: 'swap' }}
  {{ toggle_subtitle_font | font_face: font_display: 'swap' }}
  {{ toggle_title_font | font_face: font_display: 'swap' }}
  {{ toggle_main_price_font | font_face: font_display: 'swap' }}
  {{ toggle_old_price_font | font_face: font_display: 'swap' }}
  {{ price_text_font | font_face: font_display: 'swap' }}
  {{ feature_message_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .pricing-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ content_horizontal_align_mobile }};
  }

  .pricing-body-{{ section.id }} {
    display: grid;
    margin-top: {{ layout_mt_mobile }}px;
    gap: {{ layout_gap_mobile }}px;
  }

  .pricing-card-{{ section.id }} {
    display: none;
    background-color: {{ card_bg_color }};
    padding: {{ card_padding_vertical_mobile }}px {{ card_padding_horizontal_mobile }}px;
    border: {{ card_border_thickness }}px solid {{ card_border_color }};
    border-radius: {{ card_radius }}px;
  }

  .pricing-card-{{ section.id }}.active {
    display: block;
  }

  .pricing-card-top-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    flex-wrap: wrap;
  }

  .pricing-card-left-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .pricing-card-title-{{ section.id }} {
    margin: 0px;
    font-size: {{ card_title_size_mobile }}px;
    color: {{ card_title_color }};
    line-height: {{ card_title_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 700;
  }

  .pricing-card-badge-{{ section.id }} {
    margin: 0px;
    padding: {{ badge_padding_vertical_mobile }}px {{ badge_padding_horizontal_mobile }}px;
    border-radius: {{ badge_radius }}px;
    font-size: {{ badge_size_mobile }}px;
    line-height: {{ badge_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .pricing-card-text-{{ section.id }} {
    margin: 0px;
    font-size: {{ card_text_size_mobile }}px;
    color: {{ card_text_color }};
    line-height: {{ card_text_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .pricing-card-features-{{ section.id }} {
    margin-top: {{ features_mt_mobile }}px;
    display: flex;
    flex-direction: column;
    gap: {{ features_gap_mobile }}px;
  }

  .pricing-card-features-divider-{{ section.id }}:not(:last-child) {
    display: block !important;
    height: {{ features_divider_thickness }}px;
    width: 100%;
    background-color: {{ features_divider_color }};
  }

  .pricing-card-feature-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 20px;
    justify-content: space-between;
  }

  .pricing-card-feature-left-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .pricing-card-feature-title-{{ section.id }} {
    margin: 0px;
    font-size: {{ feature_title_size_mobile }}px;
    color: {{ feature_title_color }};
    line-height: {{ feature_title_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 400;
  }

  .pricing-card-feature-icon-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  .pricing-card-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    margin: 0;
    margin-top: {{ button_mt_mobile }}px;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 0.25s ease 0s;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
    font-weight: 700;
  }

  .pricing-card-button-inner-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .pricing-card-button-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .pricing-card-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .pricing-card-button-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .pricing-card-button-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .pricing-toggle-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    background-color: {{ toggle_card_bg_color }};
    padding: {{ toggle_card_padding_vertical_mobile }}px {{ toggle_card_padding_horizontal_mobile }}px;
    border: {{ toggle_card_border_thickness }}px solid {{ toggle_card_border_color }};
    border-radius: {{ toggle_card_radius }}px;
    cursor: pointer;
    transition: all 0.25s ease 0s;
  }

  .pricing-toggle-{{ section.id }}:not(:first-child) {
    margin-top: {{ toggle_cards_gap_mobile }}px;
  }

  .pricing-toggle-{{ section.id }}.active {
    background-color: {{ toggle_card_bg_active_color }};
    border-color: {{ toggle_card_border_active_color }};
    transition: all 0.25s ease 0s;
  }

  .pricing-toggle-title-wrapper-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .pricing-toggle-subtitle-{{ section.id }} {
    margin: 0px;
    font-size: {{ toggle_subtitle_size_mobile }}px;
    color: {{ toggle_subtitle_color }};
    line-height: {{ toggle_subtitle_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .pricing-toggle-title-{{ section.id }} {
    margin: 0px;
    margin-top: {{ toggle_title_mt_mobile }}px;
    font-size: {{ toggle_title_size_mobile }}px;
    color: {{ toggle_title_color }};
    line-height: {{ toggle_title_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 700;
  }

  .pricing-toggle-prices-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .pricing-toggle-main-price-{{ section.id }} {
    margin: 0px;
    font-size: {{ toggle_main_price_size_mobile }}px;
    color: {{ toggle_main_price_color }};
    line-height: {{ toggle_main_price_height }}%;
    text-transform: unset;
    text-decoration: none;
    font-weight: 700;
  }

  .pricing-toggle-old-price-{{ section.id }} {
    margin: 0px;
    margin-bottom: 4px;
    font-size: {{ toggle_old_price_size_mobile }}px;
    color: {{ toggle_old_price_color }};
    line-height: {{ toggle_old_price_height }}%;
    text-transform: unset;
    text-decoration: line-through;
  }

  .pricing-toggle-price-text-{{ section.id }} {
    margin: 0px;
    font-size: {{ price_text_size_mobile }}px;
    color: {{ price_text_color }};
    line-height: {{ price_text_height }}%;
    text-transform: unset;
    text-decoration: none;
  }

  .pricing-card-feature-message-{{ section.id }} {
    position: relative;
    cursor: pointer;
  }

  .pricing-card-feature-message-icon-{{ section.id }} {
    display: flex;
  }

  .pricing-card-feature-message-icon-{{ section.id }} svg path {
    fill: {{ feature_message_icon_color }};
  }

  .pricing-card-feature-message-text-{{ section.id }} {
    min-width: max-content;
    position: absolute;
    z-index: 2;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    bottom: calc(100% + 5px);
    opacity: 0;
    pointer-events: none;
    margin: 0px;
    background-color: {{ feature_message_bg_color }};
    font-size: {{ feature_message_size_mobile }}px;
    color: {{ feature_message_color }};
    line-height: {{ feature_message_height }}%;
    text-transform: unset;
    text-decoration: none;
    border-radius: 4px;
    padding: 6px;
    transition: all 0.25s ease 0s;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
  }

  .pricing-card-feature-message-{{ section.id }}:hover .pricing-card-feature-message-text-{{ section.id }} {
    transform: translateX(-50%) translateY(0px);
    opacity: 1;
    pointer-events: all;
    transition: all 0.25s ease 0s;
  }
  
