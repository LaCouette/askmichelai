{%- style -%}  
  {{ title_font | font_face: font_display: 'swap' }}
  {{ text_font | font_face: font_display: 'swap' }}
  {{ button_font |  font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  } 

  .collection-grid-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat({{ cards_view_mobile }}, 1fr);
    gap: {{ cards_gap_mobile }}px;
  }

  .collection-media-{{ section.id }} {
    position: relative;
    text-decoration: none;
    cursor: pointer;
    border: {{ media_border_thickness }}px solid {{ media_border_color }};
    border-radius: {{ media_radius }}px;
    overflow: hidden;
    transition: all 0.25s ease 0s;
    box-sizing: border-box !important;
  }

  .collection-media-{{ section.id }} img,
  .collection-media-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-media-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .collection-media-{{ section.id }} video,
  .collection-media-{{ section.id }} iframe {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin: 0;
    border: 0;
    box-shadow: 0;
  }

  .collection-media-nav-{{ section.id }} {
    position: absolute;
    bottom: 10px;
    right: 10px;
    width: 100%;
    display: flex;
    align-items: center;
    gap: {{ controls_gap_mobile }}px;
    justify-content: end;
  }

  .collection-media-mute-{{ section.id }},
  .collection-media-play-{{ section.id }} {    
    margin: 0;
    padding: 0;
    width: {{ controls_size_mobile }}px;
    height: {{ controls_size_mobile }}px;
    border: none;
    background-color: transparent;
    cursor: pointer;
    border: {{ controls_border_thickness }}px solid {{ controls_border_color }};
    border-radius: 50%;
  }

  .collection-media-mute-{{ section.id }} svg,
  .collection-media-play-{{ section.id }} svg {
    background-color: transparent;
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-media-mute-{{ section.id }} svg path:nth-child(1),
  .collection-media-play-{{ section.id }} svg path:nth-child(1) {
    fill: {{ controls_bg_color }};
  }

  .collection-media-mute-{{ section.id }} svg path:nth-child(2),
  .collection-media-play-{{ section.id }} svg path:nth-child(2) {
    fill: {{ controls_icon_color }};
  }

  .collection-media-mute-{{ section.id }} svg:nth-child(1),
  .collection-media-play-{{ section.id }} svg:nth-child(1) {
    display: none;
  }

  .collection-media-mute-{{ section.id }}.active svg:nth-child(1),
  .collection-media-play-{{ section.id }}.active svg:nth-child(1) {
    display: block;
  }

  .collection-media-mute-{{ section.id }}.active svg:nth-child(2),
  .collection-media-play-{{ section.id }}.active svg:nth-child(2) {
    display: none;
  }

  .collection-title-{{ section.id }} {
    margin: 0;
    text-transform: unset;
    word-wrap: break-word;
    font-size: {{ title_size_mobile }}px;
    line-height: {{ title_height }}%;
    color: {{ title_color }};
    margin-top: {{ title_mt_mobile }}px;
    text-align: {{ content_align_mobile }};
    font-weight: 700;
  }

  .collection-text-{{ section.id }} {
    text-align: {{ content_align_mobile }};
    margin-top: {{ text_mt_mobile }}px;    
  }

  .collection-text-{{ section.id }} * {
    margin: 0;    
    text-transform: unset;
    word-wrap: break-word;
    font-size: {{ text_size_mobile }}px;
    line-height: {{ text_height }}%;
    color: {{ text_color }};    
  }

  .collection-button-wrap-{{ section.id }} {
    display: flex;
    align-items: center;
    width: 100%;
    justify-content: {{ button_horizontal_align_mobile }};
  }

  .collection-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: fit-content;
    gap: 10px;
    width: 100%;
    margin: 0;
    margin-top: {{ button_mt_mobile }}px;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 1s ease 0s;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
    font-weight: 700;
  }

  .collection-button-inner-{{ section.id }} {
    margin: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .collection-button-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .collection-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
    transition: all 0.25s ease 0s;
  }

  .collection-button-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .collection-button-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }   

    .collection-grid-{{ section.id }} {
      grid-template-columns: repeat({{ cards_view }}, 1fr);
      gap: {{ cards_gap }}px;
    }

    .collection-media-nav-{{ section.id }} {
      gap: {{ controls_gap }}px;
    }

    .collection-media-mute-{{ section.id }},
    .collection-media-play-{{ section.id }} {    
      width: {{ controls_size }}px;
      height: {{ controls_size }}px;
    }

    .collection-title-{{ section.id }} {
      font-size: {{ title_size }}px;
      margin-top: {{ title_mt }}px;
      text-align: {{ content_align }};
    }

    .collection-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ content_align }};
    }

    .collection-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }   

    .collection-button-wrap-{{ section.id }} {
      justify-content: {{ button_horizontal_align }};
    }

    .collection-button-{{ section.id }} {
      margin-top: {{ button_mt }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }
  }
  
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ content_width }}px;
    }
  </style>
{% endunless %}

{% if margin_horizontal_mobile > 0 %}
  <style>
    .section-{{ section.id }} {
      border-left: solid {{ border_color }} {{ border_thickness }}px;
      border-right: solid {{ border_color }} {{ border_thickness }}px;
    }
    
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: 0px;
        border-right: 0px;
      }
    }
  </style>
{% endif %}

{% if margin_horizontal > 0 %}
  <style>
    @media(min-width: 1024px) {
      .section-{{ section.id }} {
        border-left: solid {{ border_color }} {{ border_thickness }}px;
        border-right: solid {{ border_color }} {{ border_thickness }}px;
      }
    }
  </style>
{% endif %}

{% if title_custom %}
  <style>
    .collection-title-{{ section.id }} {
      font-family: {{ title_font.family }}, {{ title_font.fallback_families }};
      font-weight: {{ title_font.weight }};
      font-style: {{ title_font.style }};
    }
  </style>
{% endif %}

{% if text_custom %}
  <style>
    .collection-text-{{ section.id }} * {
      font-family: {{ text_font.family }}, {{ text_font.fallback_families }};
      font-weight: {{ text_font.weight }};
      font-style: {{ text_font.style }};
    }
  </style>
{% endif %}

{% if button_custom %}
  <style>
    .collection-button-{{ section.id }} {
      font-family: {{ button_font.family }}, {{ button_font.fallback_families }};
      font-weight: {{ button_font.weight }};
      font-style: {{ button_font.style }};
    }
  </style>
{% endif %}
